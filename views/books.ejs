<script src="js/bootstrap-toggle.min.js"></script>
<script src="js/basictable.js"></script>
<script src="js/bootstrap.datepicker.js"></script>
<script type="text/javascript">
var searchStr="<%= keywordStr %>";
var xhrStatus;

var pageSize=15, totalNum=0, totalDisplayedNum=0;
var start=0, end=pageSize;
var accessRightCode=parseInt(access_right);
var complete=false, completeScroll=false, displayCheckBoxClass=false;

	function searchKeyword(e){
		$('#table-breakpoint').basictable('destroy');
		
		var searchField= $("#"+e).val();
		if(searchField!=""){
			$("#"+e).removeClass("errorPlaceHolder");
			searchStr=searchField;
		}else{
			$("#"+e).addClass("errorPlaceHolder");
			$("#"+e).attr("placeholder" , "Please enter search term here");
			$("#"+e).focus();
			searchStr='';
		}
		
			$("#documents_data").html('');
			$('#display_more_btn').hide();
			$('#img_loading_div').show();
			start=0;
			end=start+pageSize;
			load_data();
	}
	
$(document).ready(function() {
    $('#table').basictable();
    	
    $('#display_more_btn').hide();
	$('#img_loading_div').show();
	load_data();
		
	$("#searchBtn").click(function()	{
		searchKeyword('searchField');
	});
		
	$('#searchField').keypress(function (e) {
  		if (e.which == 13) {
    		searchKeyword('searchField');
  		}
	});
	$("#searchBtn").click(function()	{
		searchKeyword('searchField');
	});
		
	$("#display_data").change(function()	{
		if($(this).val()==1){
			$(".showCheckBoxClass").show();
			displayCheckBoxClass=true;
		}else{
			$(".showCheckBoxClass").hide();
			displayCheckBoxClass=false;
		}
		$('#table-breakpoint').basictable('destroy');
		$("#documents_data").html('');
		$('#display_more_btn').hide();
		$('#img_loading_div').show();
		start=0;
		end=start+pageSize;
		load_data();
	});
			
  	$(window).scroll(function(){
		if ($(window).scrollTop() == $(document).height() - $(window).height()){
			if(complete==false && completeScroll==false) {
				load_more();
			}
		}
	});	
});

function checkSelection () {
	var checkedVals = [];
	$('input.check:checkbox:checked').each(function () {
   	 	checkedVals.push($(this).val());
	});
	
	if(checkedVals.length>05){
		$('#send_notificationBtn').show();
	} else{
		$('#send_notificationBtn').hide();
	}
}

function refresh_data(){
	$('#table-breakpoint').basictable('destroy');
	searchStr="";
	$(".searchFieldClass").val("");
	$("#documents_data").html('');
	$('#display_more_btn').hide();
	$('#img_loading_div').show();
	start=0;
	end=start+pageSize;
	load_data();
}

function load_more(){
	$('#table-breakpoint').basictable('destroy');
	$('#display_more_btn').hide();
	$('#img_loading_div').show();
	if(start==0)	{
		start=end+1;
	} else{
		start=end;
	}
	end=start+pageSize;
	load_data();
}

	function load_data(){
		completeScroll=true;
		
		$(".alert").remove();
		var jsonRow="/api_fetch_data?collection=books&start="+start+"&limit="+pageSize+"&s="+searchStr;
		if($("#display_data").val()!=="" && $("#display_data").val()!==null && $("#display_data").val()!=="null"){
			jsonRow+="&filter_data="+$("#display_data").val();
		}
		if(xhrStatus) xhrStatus.abort();
		xhrStatus=$.getJSON(jsonRow,function(html){
			if(html.error){
				complete=true;
				$(".topOptionsClass").hide();
				$("#table-breakpoint").before('<div class="alert alert-danger">'+html.error+'</div>');
			}else{
				
				var contentHtml="";
				totalNum=html.total;
				if(html.iTotalRecordsReturned){
					totalDisplayedNum=totalDisplayedNum+parseInt(html.iTotalRecordsReturned);
				}
				if(totalDisplayedNum>0 && totalNum>0){
					$(".display_records_count").html("Showing "+totalDisplayedNum+" out of "+totalNum);
				}
				if(html.aaData.length>0){
					$.each(html.aaData, function(i,row){
						var uniqueIDStr=row._id;
						contentHtml+="<tr id='tr_"+uniqueIDStr+"'>";
						contentHtml+='<td class="hidden-xs" ';
						if(displayCheckBoxClass){
							contentHtml+='';
						}else{
						contentHtml+='style="display:none;"';
						}
						contentHtml+='><input type="checkbox" class="check" value="'+uniqueIDStr+'" onClick="checkSelection();"></td>';
						contentHtml+='<td>'+row.name+'</td>';
						contentHtml+='<td>'+row.isbn+'</td>';
						if(row.availability && (row.availability=="0" || row.availability==0)){
							contentHtml+='<td>Issued</td>';
						}else{
							contentHtml+='<td>Available</td>';
						}
						<% if (typeof authenticatedUser.access_right !== 'undefined' && authenticatedUser.access_right !== null && (authenticatedUser.access_right==11 || authenticatedUser.access_right=='11')) {	%>
                        	contentHtml+='<td class="actions-list"><a href="book?_id='+uniqueIDStr+'" title="Edit"><i class="fa fa-pencil"></i></a></td>';
						<%	}	%>
						contentHtml+="</tr>";
					});
					$("#documents_data").append(contentHtml);
					
     				complete=false;
     			}else{
     				complete=true;
     				$("#table-breakpoint").before('<div class="alert alert-danger alert-dismissable"><button class="close" aria-hidden="true" data-dismiss="alert" type="button">×</button>No more books found!</div>');
     			}
			}
			
					//initialize table
					$('#table-breakpoint').basictable({
        				breakpoint: 751
     				});
     		
			if(end< totalNum){
				$('#display_more_btn').show();
			}
			$('#img_loading_div').hide();
			completeScroll=false;
		});
	}
</script>
</body>
</html>