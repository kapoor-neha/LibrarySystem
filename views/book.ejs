<% include include/main-header %>
</head>
<body class="hold-transition skin-blue sidebar-mini">
	<div class="wrapper">	
   		<!-- Header Starts here-->
  		<% include include/header %>
  		<!-- Header Ends here-->
  		
  		<!-- Sidebar Starts Here-->
  			<% include include/sidebar %>
    	<!-- Sidebar Ends Here-->
		<div class="content-wrapper">
    	  	<!-- Content Header (Page header) -->
    		<section class="content-header">
      			<h1>Book <small><% if (typeof contentObj !== null && typeof contentObj.name !== 'undefined' && contentObj.name !== null) { %><%= contentObj.name %><% } else{	%>Add new<% }%></small></h1>
      			<ol class="breadcrumb">
        			<% include include/dashboard-breadcrumb %>
        			<li class="active">Book</li>
      			</ol>
    		</section>	
    		<section class="content">
      			<div class="row">
      				
            				<div class="panel-body no-padding-top bg-white"> 
            					<% include include/display_returned_msg %>
            					<form class="form-horizontal" action="/save/book" method="POST" id="contentForm">
            						<input type="hidden" class="form-control" id="table_name" name="table_name" value="books">
      								<input type="hidden" class="form-control" id="unique_field" name="unique_field" value="code">
      								<input type="hidden" class="form-control" id="id" name="id" value="<% if (typeof contentObj._id !== 'undefined' && contentObj._id !== null) { %><%= contentObj._id %><% } %>">
      								<input type="hidden" class="form-control" id="data" name="data" value="">
            						
            						<div class="form-group">
                  						<label class="control-label col-md-2" for="first-name">Name<span class="required">*</span></label>
                  						<div class="col-md-6 col-lg-4">
                    						<input type="text" required="required" id="name" name="name" class="form-control col-md-5 col-xs-12" onblur="generate_code('name','code')" onkeyup="generate_code('name','code')" value="<% if (typeof contentObj !== null && typeof contentObj.name !== 'undefined' && contentObj.name !== null) { %><%= contentObj.name %><% } %>">
                  						</div>
                					</div>
              						<div class="form-group">
                  						<label class="control-label col-md-2" for="">Code<span class="required">*</span></label>
                  						<div class="col-md-6 col-lg-4">
                   							<input type="text"  required="required" class="form-control col-md-5 col-xs-12" id="code" name="code" readonly value="<% if (typeof contentObj !== null && typeof contentObj.code !== 'undefined' && contentObj.code !== null) { %><%= contentObj.code %><% } %>">
                  						</div>
                					</div>
                					<div class="form-group">
                  						<label class="control-label col-md-2" for="first-name">ISBN<span class="required">*</span></label>
                  						<div class="col-md-6 col-lg-4">
                    						<input type="text" required="required" id="isbn" name="isbn" class="form-control col-md-5 col-xs-12" value="<% if (typeof contentObj !== null && typeof contentObj.isbn !== 'undefined' && contentObj.isbn !== null) { %><%= contentObj.isbn %><% } %>">
                  						</div>
                					</div>
                					<div class="form-group">
                  						<label class="control-label col-md-2" for="">Author Name</label>
                  						<div class="col-md-6 col-lg-4">
                   							<input type="text"  class="form-control col-md-5 col-xs-12" id="author_name" name="author_name" value="<% if (typeof contentObj !== null && typeof contentObj.author_name !== 'undefined' && contentObj.author_name !== null) { %><%= contentObj.author_name %><% } %>">
                  						</div>
                					</div>
                					<div class="form-group">
                  						<label class="control-label col-md-2" for="">Publisher</label>
                  						<div class="col-md-6 col-lg-4">
                   							<input type="text"  class="form-control col-md-5 col-xs-12" id="publisher" name="publisher" value="<% if (typeof contentObj !== null && typeof contentObj.publisher !== 'undefined' && contentObj.publisher !== null) { %><%= contentObj.publisher %><% } %>">
                  						</div>
                					</div>
                					<div class="form-group">
                  						<label class="control-label col-md-2" for="">Price</label>
                  						<div class="col-md-6 col-lg-4">
                   							<input type="text"  class="form-control col-md-5 col-xs-12" id="price" name="price" value="<% if (typeof contentObj !== null && typeof contentObj.price !== 'undefined' && contentObj.price !== null) { %><%= contentObj.price %><% } %>">
                  						</div>
                					</div>
                					<div class="form-group">
                  						<label class="control-label col-md-2" for="">Edition</label>
                  						<div class="col-md-6 col-lg-4">
                   							<input type="text"  class="form-control col-md-5 col-xs-12" id="edition" name="edition" value="<% if (typeof contentObj !== null && typeof contentObj.edition !== 'undefined' && contentObj.edition !== null) { %><%= contentObj.edition %><% } %>">
                  						</div>
                					</div>
                					<div class="form-group">
                  						<label class="control-label col-md-2" for="">Subject</label>
                  						<div class="col-md-6 col-lg-4">
                   							<input type="text"  class="form-control col-md-5 col-xs-12" id="subject" name="subject" value="<% if (typeof contentObj !== null && typeof contentObj.subject !== 'undefined' && contentObj.subject !== null) { %><%= contentObj.subject %><% } %>">
                  						</div>
                					</div>
                					
                					<div class="form-group">
    									<label for="" class="col-sm-2 control-label"></label>
    									<div class="col-sm-9" style="margin-top:6px;">
    										<div STYLE="margin-right:10px;display:inline-block;">
      		  									<label> <input type="checkbox" id="status" name="status" value="1" <% if (typeof contentObj !== null && typeof contentObj.status !== 'undefined' && contentObj.status !== null && contentObj.status == 1) { %>checked<% } %> > <strong style="font-weight:600">Active</strong></label>
    			  							</div>
										</div>
									</div>
									<div class="form-group">
    									<label for="" class="col-sm-2 control-label"></label>
    									<div class="col-sm-9" style="margin-top:6px;">
    										<div STYLE="margin-right:10px;display:inline-block;">
      		  									<label> <input type="radio" id="availability" name="availability" value="1" <% if (typeof contentObj !== null && typeof contentObj.availability !== 'undefined' && contentObj.availability !== null && (contentObj.availability == '1' || contentObj.availability == 1)) { %>checked<% } %> > <strong style="font-weight:600">Available</strong></label>
    			  							</div>
    			  							<div STYLE="margin-right:10px;display:inline-block;">
      		  									<label> <input type="radio" id="availability" name="availability" value="0" <% if (typeof contentObj !== null && typeof contentObj.availability !== 'undefined' && contentObj.availability !== null && (contentObj.availability == '0' || contentObj.availability == 0)) { %>checked<% } %> > <strong style="font-weight:600">Issued</strong></label>
    			  							</div>
										</div>
									</div>
                					<div class="form-group">
                   						<div class="col-md-9 col-lg-6" align="CENTER">
               								<div class="submit-btn-setting"> <button type="submit" class="btn btn-primary btn-color margin-right-5 btn-sm">Submit</button>
               								<% if (typeof contentObj !== null && typeof contentObj._id !== 'undefined' && contentObj._id !== null) {	%>
               									<a href="/books" class="btn btn-danger btn-sm">Cancel</a>
               								<%	}else{	%>
               									<button type="reset" class="btn btn-danger btn-sm">Reset</button>
               								<% } %>
               								</div>
               							</div>
                					</div>
              					</form>
              				</div>
            	</div>
      		</section>
    		<!--//body content--> 
  		</div>
  		<!--//Main Content--> 
	
		<!-- Footer Starts Here-->
			<% include include/footer %>
		<!-- Footer Ends Here-->
</div>
<!-- Page-Level Plugin Scripts-->
<script src="js/jquery.validate.js"></script>
<script>

$(document).ready(function(){
		// validate form on keyup and submit
		$("#contentForm").validate({
			ignore: "",
			onkeyup: false,
			errorClass: 'error',
			validClass: 'valid',
			errorElement: "em",
			errorPlacement: function(error, element) {
				$(element).closest('div').append(error);
			},
			onfocusout: false,
			invalidHandler: function(form, validator) {
				var errors = validator.numberOfInvalids();
				if (errors) {                    
					validator.errorList[0].element.focus();
				}
			},
			rules: {
				name: { required: true },
				code: { required: true }
			},
			submitHandler: function(form) {
				dataAsJson('contentForm', form);
 			}
		});	
});
</script>
</body>
</html>