<aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
      <!-- Sidebar user panel -->
      <div class="user-panel">
        <div class="pull-left image">
          <img src="<% if (typeof authenticatedUser.uploaded_file_uuid !== 'undefined' && authenticatedUser.uploaded_file_uuid !== null && authenticatedUser.uploaded_file_uuid !=="") {	%><%= backendDirectory %>/file/<%= authenticatedUser.uploaded_file_uuid %><% }else{ %>img/no-avatar.jpg<% } %>" class="img-circle" alt="User Image">
        </div>
        <% 	
if (typeof authenticatedUser !== 'undefined' && authenticatedUser !== null) {	
	var loggedInUserNameStr="";
	if (typeof authenticatedUser.firstname !== 'undefined' && authenticatedUser.firstname !== null) {	
		loggedInUserNameStr+=authenticatedUser.firstname;
	}
	if (typeof authenticatedUser.lastname !== 'undefined' && authenticatedUser.firlastnamestname !== null) {	
		loggedInUserNameStr+="&nbsp;"+authenticatedUser.lastname;
	}
	%>
	<div class="pull-left info">
          <p><%- loggedInUserNameStr %></p>
          <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
        </div>
      
<% } %>
      </div>  
      <!-- search form -->
      <form action="#" method="get" class="sidebar-form" onSubmit="load_navigation_data()">
        <div class="input-group">
          <input type="text" id="menuSearchBox" class="form-control" placeholder="Search...">
              <span class="input-group-btn">
                <button id="search-btn" class="btn btn-flat" STYLE="border-left:none;line-height: 12px;" onClick="load_navigation_data(); return false;"><i class="fa fa-search"></i></button>
              </span>
        </div>
      </form>
      <!-- /.search form -->
      <!-- sidebar menu: : style can be found in sidebar.less -->
      <ul class="sidebar-menu" id="dashboard-menu">
      	<li class="treeview"><a href="/"><i class="fa fa-dashboard"></i> <span>Dashboard</span><span class="pull-right-container"><i class="fa fa-angle-left pull-right"></i></span></a></li>
      	<li class="treeview"><a href="#"><i class="fa fa-book"></i> <span>Books</span><span class="pull-right-container"><i class="fa fa-angle-left pull-right"></i></span></a><ul class="treeview-menu"><li><a href="/books"><i class="fa fa-circle-o"></i> List books</a></li>
      	 <% if (typeof authenticatedUser.access_right !== 'undefined' && authenticatedUser.access_right !== null && (authenticatedUser.access_right==11 || authenticatedUser.access_right=='11')) {	%>
                                      
            <li><a href="/book"><i class="fa fa-circle-o"></i> Add new book</a></li>
        <% } %>
        
      	</ul></li>
      	<% if (typeof authenticatedUser.access_right !== 'undefined' && authenticatedUser.access_right !== null && (authenticatedUser.access_right==11 || authenticatedUser.access_right=='11')) {	%>
         
      	<li class="treeview"><a href="#"><i class="fa fa-group"></i> <span>Users</span><span class="pull-right-container"><i class="fa fa-angle-left pull-right"></i></span></a><ul class="treeview-menu"><li><a href="/users"><i class="fa fa-circle-o"></i> List users</a></li>
      	                              
            <li><a href="/user"><i class="fa fa-circle-o"></i> Add new user</a></li>
       
        
      	</ul></li>
      	 <% } %>
      </ul>
      </section>
    <!-- /.sidebar -->
</aside>